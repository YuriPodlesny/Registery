@model UpdateOMSStatusVM

@{
    ViewBag.Title = "Изменить значение справочника «ОМС Статус»";
}
<h2>Изменить значение справочника «ОМС Статус»</h2>
<form asp-controller="OMSStatus" asp-action="UpdateOMSStatus" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="col-md-4">
        <label asp-for="Value" class="form-label"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>