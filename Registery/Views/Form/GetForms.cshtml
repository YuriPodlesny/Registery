@model IndexPagination<FormDto>;

@{
    ViewBag.Title = "Форма ввода";
}

<h2>Форма ввода</h2>

﻿@if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "success")
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Файл успешно загружен
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "empty")
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        Файл пуст
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (User.IsInRole(SD.Role.Администратор.ToString()))
{
    <a asp-action="CreateForm" class="btn btn-success btn-sm mb-1">Добавить</a>
}

<div class="container-fluid justify-content-start">
    <form method="post" enctype="multipart/form-data">
        <div class="d-flex flex-row bd-highlight mb-3">
            <div class="bd-highlight">
                <label>Выберите файл</label>
                <input type="file" name="file" />
            </div>
            <div class="bd-highlight">
                <input type="submit" asp-controller="Form" asp-action="UploadExcel" class="btn btn-primary" value="Загрузить Excel файл" />
            </div>
            <div class="mx-2 bd-highlight">
                <a class="btn btn-warning" asp-controller="Form" asp-action="DownloudExcel">Скачать Excel файл</a>
            </div>
        </div>
    </form>
    <form method="get" class="d-flex mb-2">
        <input class="form-control me-2" name="searchText" type="search" placeholder="Кадастровый номер" value="@ViewBag.SearchText" aria-label="Search">
        <input type="submit" asp-controller="Form" asp-action="GetForms" class="btn btn-light" value="Найти" />
    </form>
</div>

<table class="table table-hover">
    <tbody class="table-light">
        <tr>
            <th>Район</th>
            <th>Кадастровый номер</th>
            <th>Адрес</th>
            <th>Состояние в ЕГРН</th>
            <th>Статус Росреестр</th>
            <th>Статус ОМС</th>
            <th>Последнее изменение Росреестр</th>
            <th>Последнее изменение ОМС</th>
            <th>Последнее изменение пользователь ОМС</th>
            <th></th>
            <th></th>
        </tr>
    </tbody>
    @foreach (var form in Model.Model)
    {
        <tr>
            <td>@form.DistrictNumber?.Value</td>
            <td>@form.CadastralNumber</td>
            <td>@form.Address</td>
            <td>@form.StatusEGRN</td>
            <td>@form.RosreestrStatus?.Value</td>
            <td>@form.OMSStatus?.Value</td>
            <td>@form.LastModifiedDateRosreestr</td>
            <td>@form.LastModifiedDateOMS</td>
            <td>@form.LastModifiedUserOMS</td>
            @if (User.IsInRole(SD.Role.Администратор.ToString()))
            {
                <td>
                    <form method="post" asp-controller="Form" asp-action="DeleteForm" asp-route-id="@form.Id">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Form" asp-action="UpdateForm" asp-route-id="@form.Id">Изменить</a>
                </td>
            }
            @if (User.IsInRole(SD.Role.ОМС.ToString()))
            {
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Form" asp-action="UpdateForm" asp-route-id="@form.Id">Изменить</a>
                </td>
            }
            @if (User.IsInRole(SD.Role.Росреестр.ToString()))
            {
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Form" asp-action="UpdateForm" asp-route-id="@form.Id">Изменить</a>
                </td>
            }
        </tr>
    }
</table>

<page-link page-model="Model.PageModel" page-action="GetForms"></page-link>

